{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "description": "A trailer product from MZSA",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Original URL of the product page"
    },
    "title": {
      "type": "string",
      "description": "Title of the product"
    },
    "model": {
      "type": "string",
      "description": "Model identifier (e.g. МЗСА 817700)"
    },
    "version": {
      "type": "string",
      "description": "Version identifier (e.g. 002)"
    },
    "price": {
      "type": "integer",
      "description": "Price in RUB"
    },
    "specs": {
      "type": "object",
      "description": "Technical specifications",
      "additionalProperties": {
        "type": "string"
      }
    },
    "images": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of local file paths to product images"
    }
  },
  "required": ["url", "title", "price", "images"]
}